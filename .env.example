# LLM Schema Registry Configuration

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_GRPC_PORT=9090
LOG_LEVEL=info

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/schema_registry
DATABASE_MAX_CONNECTIONS=20
DATABASE_MIN_CONNECTIONS=5

# Redis Configuration (Caching)
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10
REDIS_TTL_SECONDS=3600

# S3 Configuration (Optional - for schema archiving)
S3_BUCKET=schema-registry-archives
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Security Configuration
# Generate with: openssl rand -base64 32
JWT_SECRET=change_this_to_a_secure_random_value
API_KEY_HEADER=X-Registry-API-Key
ENABLE_RBAC=true

# Compatibility Configuration
DEFAULT_COMPATIBILITY_MODE=BACKWARD
STRICT_VALIDATION=false

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
MAX_SCHEMA_SIZE_BYTES=1048576

# Observability Configuration
METRICS_PORT=9091
METRICS_PATH=/metrics
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Feature Flags
ENABLE_GRPC=true
ENABLE_WEBSOCKET=true
ENABLE_SEARCH=true
