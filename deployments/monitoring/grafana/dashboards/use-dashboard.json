{
  "dashboard": {
    "title": "Schema Registry - USE Metrics",
    "description": "Utilization, Saturation, Errors dashboard for Schema Registry",
    "tags": ["schema-registry", "use", "sre"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "CPU Utilization",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(schema_registry_process_cpu_seconds_total[5m])",
            "legendFormat": "CPU Usage",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "CPU %", "max": 1},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Memory Utilization",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "schema_registry_process_memory_bytes{type=\"rss\"}",
            "legendFormat": "RSS Memory",
            "refId": "A"
          },
          {
            "expr": "schema_registry_process_memory_bytes{type=\"virtual\"}",
            "legendFormat": "Virtual Memory",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Database Connection Pool Saturation",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "schema_registry_db_connections_active{pool=\"postgres\"}",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "schema_registry_db_connections_idle{pool=\"postgres\"}",
            "legendFormat": "Idle Connections",
            "refId": "B"
          },
          {
            "expr": "schema_registry_db_connections_max{pool=\"postgres\"}",
            "legendFormat": "Max Connections",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Redis Connection Pool",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "schema_registry_redis_connections_active",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Tokio Task Saturation",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "schema_registry_tokio_tasks_active",
            "legendFormat": "Active Tasks",
            "refId": "A"
          },
          {
            "expr": "schema_registry_tokio_tasks_total",
            "legendFormat": "Total Tasks",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Tasks"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Database Errors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(schema_registry_db_errors_total[5m])) by (error_type)",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Errors/sec"},
          {"format": "short"}
        ]
      }
    ]
  }
}
