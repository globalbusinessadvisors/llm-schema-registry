{
  "dashboard": {
    "title": "Schema Registry - SLI/SLO Dashboard",
    "description": "Service Level Indicators and Objectives monitoring",
    "tags": ["schema-registry", "sli", "slo", "sre"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "title": "Availability SLI (Target: 99.9%)",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(schema_registry_http_requests_total{status=~\"2..\"}[30d])) / sum(rate(schema_registry_http_requests_total[30d])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "min": 99,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 99},
                {"color": "yellow", "value": 99.5},
                {"color": "green", "value": 99.9}
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 2,
        "title": "Latency SLI p95 (Target: <10ms)",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(schema_registry_http_request_duration_seconds_bucket[30d])) by (le)) * 1000",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "max": 50,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 25}
              ]
            },
            "unit": "ms"
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate SLI (Target: <1%)",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(schema_registry_http_requests_total{status=~\"5..\"}[30d])) / sum(rate(schema_registry_http_requests_total[30d])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "max": 5,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 2}
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 4,
        "title": "Error Budget Remaining (30d window)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "(1 - sum(rate(schema_registry_http_requests_total{status=~\"5..\"}[30d])) / sum(rate(schema_registry_http_requests_total[30d]))) - 0.999",
            "legendFormat": "Error Budget",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Budget"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Error Budget Burn Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "(sum(rate(schema_registry_http_requests_total{status=~\"5..\"}[1h])) / sum(rate(schema_registry_http_requests_total[1h]))) / 0.001",
            "legendFormat": "1h burn rate",
            "refId": "A"
          },
          {
            "expr": "(sum(rate(schema_registry_http_requests_total{status=~\"5..\"}[6h])) / sum(rate(schema_registry_http_requests_total[6h]))) / 0.001",
            "legendFormat": "6h burn rate",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Burn Rate (x)"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [14.4], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "Fast Error Budget Burn Rate Alert",
          "noDataState": "no_data"
        }
      },
      {
        "id": 6,
        "title": "SLO Compliance Timeline",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(schema_registry_http_requests_total{status=~\"2..\"}[1d])) / sum(rate(schema_registry_http_requests_total[1d])) * 100",
            "format": "table",
            "instant": true,
            "legendFormat": "Availability",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(schema_registry_http_request_duration_seconds_bucket[1d])) by (le)) * 1000",
            "format": "table",
            "instant": true,
            "legendFormat": "p95 Latency",
            "refId": "B"
          },
          {
            "expr": "sum(rate(schema_registry_http_requests_total{status=~\"5..\"}[1d])) / sum(rate(schema_registry_http_requests_total[1d])) * 100",
            "format": "table",
            "instant": true,
            "legendFormat": "Error Rate",
            "refId": "C"
          }
        ]
      },
      {
        "id": 7,
        "title": "Uptime (Last 30 days)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "avg_over_time(up{job=\"schema-registry\"}[30d]) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 99},
                {"color": "green", "value": 99.9}
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 8,
        "title": "Incident Timeline",
        "type": "annotations",
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 24},
        "targets": []
      }
    ],
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\", job=\"schema-registry\"}",
          "iconColor": "red",
          "name": "Firing Alerts",
          "step": "60s",
          "tagKeys": "alertname",
          "textFormat": "{{alertname}}",
          "titleFormat": "Alert"
        }
      ]
    }
  }
}
